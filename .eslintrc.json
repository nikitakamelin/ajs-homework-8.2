{
    "env": {
        "browser": true,
        "es6": true,
		  "jest": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
		"guard-for-in": "warn",
		"no-param-reassign": "warn",
		"no-new": "warn",
		"no-underscore-dangle": "off",
		"no-unused-vars": "warn",
		"no-nested-ternary": "off",
		"no-plusplus": "off",
		"no-console": "off",   //чтобы не ругалось на console.log
		"no-restricted-syntax": [
			 "error",
			 "LabeledStatement",
			 "WithStatement"
		]
    }
}

